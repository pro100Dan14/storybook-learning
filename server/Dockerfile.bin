# Dockerfile for Storybook Learning Backend
FROM node:20-slim

# Install Python and dependencies for face_id.py (if needed)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies for face recognition
RUN pip3 install --no-cache-dir opencv-python insightface numpy

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install Node.js dependencies
# Use npm ci for faster, reliable, reproducible builds
RUN npm ci --only=production && npm cache clean --force

# Copy application code
COPY . .

# Create directory for jobs (generated content)
RUN mkdir -p /app/jobs && chmod 755 /app/jobs

# Expose port
EXPOSE 8787

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:8787/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Run the application
CMD ["node", "index.js"]

